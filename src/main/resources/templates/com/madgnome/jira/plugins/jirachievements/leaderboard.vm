            #leaderboardTable($createdIssueLB)
          </div>
          <div class="tabs-pane" id="horizontal-second">
            #leaderboardTable($resolvedIssueLB)
          </div>
          <div class="tabs-pane" id="horizontal-third">
            #leaderboardTable($testedIssueLB)
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
